@model IEnumerable<LibreriaDeClases.Modelos.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (ViewBag.EsAdministrador == true)
{
    <p>
        <a asp-action="Create">Crear Nueva Categoría</a>
    </p>
}
<table id="categoriasTable" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdCategoria">Detalles</a>
                @if (ViewBag.EsAdministrador == true)
                {
                    <text> | </text>
                    <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a>
                    <text> | </text>
                    <a asp-action="Delete" asp-route-id="@item.IdCategoria">Borrar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $('#categoriasTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.8/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                order: [],
                columnDefs: [
                    { targets: -1, orderable: false, searchable: false }
                ]
            });
        });
    </script>
}
